<h3 class="ui header">{{t "forms.i-i-s-logistika-snova-докум-постав-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-logistika-snova-докум-постав-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-logistika-snova-докум-постав-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номДокПостав
      class=(if (v-get validationModel "номДокПостав" "isInvalid") "error")
      label=(t "forms.i-i-s-logistika-snova-докум-постав-e.номДокПостав-caption")
      data-test-i-i-s-logistika-snova-докум-постав-e-номДокПостав=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номДокПостав" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-logistika-snova-докум-постав-e.организация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.организация
      displayAttributeName="наимОрганиз"
      autocomplete=true
      relationName="организация"
      projection="ОрганизацияL"
      title=(t "forms.i-i-s-logistika-snova-докум-постав-e.организация-caption")
      readonly=readonly
      componentName="организацияLookup"
      class=(if (v-get validationModel "организация" "isInvalid") "error")
      data-test-i-i-s-logistika-snova-докум-постав-e-организация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "организация" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-logistika-snova-докум-постав-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИОСотруд"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-logistika-snova-докум-постав-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-logistika-snova-докум-постав-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-logistika-snova-докум-постав-e.клиенты-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиенты
      displayAttributeName="заказчик"
      autocomplete=true
      relationName="клиенты"
      projection="КлиентыL"
      title=(t "forms.i-i-s-logistika-snova-докум-постав-e.клиенты-caption")
      readonly=readonly
      componentName="клиентыLookup"
      class=(if (v-get validationModel "клиенты" "isInvalid") "error")
      data-test-i-i-s-logistika-snova-докум-постав-e-клиенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиенты" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.клиенты.адресПоставки
      class=(if (v-get validationModel.клиенты "адресПоставки" "isInvalid") "error")
      label=(t "forms.i-i-s-logistika-snova-докум-постав-e.клиенты.адресПоставки-caption")
      data-test-i-i-s-logistika-snova-докум-постав-e-клиенты-адресПоставки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.клиенты "адресПоставки" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-logistika-snova-докум-постав-e.срокПоставки-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.срокПоставки
      class=(if (v-get validationModel "срокПоставки" "isInvalid") "error")
      data-test-i-i-s-logistika-snova-докум-постав-e-срокПоставки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "срокПоставки" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-logistika-snova-докум-постав-e.тЧИнфОЗак-caption"}}</label>
    {{flexberry-groupedit
      componentName="тЧИнфОЗакGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.тЧИнфОЗак
      content=model.тЧИнфОЗак
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "тЧИнфОЗак" "isInvalid") "error")
      data-test-i-i-s-logistika-snova-докум-постав-e-тЧИнфОЗак=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "тЧИнфОЗак" "message")}}
  </div>
</form>
